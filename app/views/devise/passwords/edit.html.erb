<section class="px-10 py-10" style="background-color: #FFF4F0;">
  <div class="container mx-auto px-4 bg-white rounded-lg shadow-white-md py-3">
    <h2 style="color: #024525">Change your password</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs" style="color: #024525">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change my password", style: "background-color: #024525; color: white; margin-bottom: 10px;" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
