<section class="px-10 py-10" style="background-color: #FFF4F0;">
  <div class="container mx-auto px-4 bg-white rounded-lg shadow-white-md py-3">
    <h2 style="color: #024525">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs" style="color: #024525">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", style: "background-color: #024525; color: white; margin-bottom: 10px;" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
